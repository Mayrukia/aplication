<div class='d-flex justify-content-md-end'>
  <%= form_with url: frontend_products_path, model: @presenter.filter, local: true, method: :get, class: 'form-inline' do |form| %>
    <%= form.text_field :query, class: 'form-control mb-2 mr-sm-2' %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {include_blank: 'Todas'}, class: 'form-control mb-2 mr-sm-2' %>
    <%= form.submit 'Buscar', class: 'btn btn-info mb-2' %>
  <% end %>
</div>
